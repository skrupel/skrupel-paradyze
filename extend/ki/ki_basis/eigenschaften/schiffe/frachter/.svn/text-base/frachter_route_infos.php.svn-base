 * 
 * Kontainer-Klasse fuer Informationen zum Verhalten von Frachtern, 
 * die Routen abfliegen.
 */
class frachter_route_infos {
	/**Bestimmt die maximalen Planeten, die in einer Route sein duerfen (2-10).*/
	var $max_planeten_pro_route;
	/**Bestimmt die minimalen Planeten, die in einer Route sein duerfen (2-10).*/
	var $min_planeten_pro_route;
	/**Bestimmt die minimale Menge an Lemin, die ein Frachter auf einer Route haben darf, 
	 * bevor er tanken fliegt.*/
	var $min_route_lemin;
	
	/**
	 * Konstruktor fuer frachter_route_infos. Die uerbergebenen Werte werden einfach uebernommen.
	 */
	function __construct($max_planeten_pro_route, $min_planeten_pro_route, $min_route_lemin) {
		$this->max_planeten_pro_route = $max_planeten_pro_route;
		$this->min_planeten_pro_route = $min_planeten_pro_route;
		$this->min_route_lemin = $min_route_lemin;
	}
}
?>
